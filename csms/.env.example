# Server Configuration
PORT=3000
OCPP_WSS_PORT=3001

# Firebase Configuration (choose one method)
# Method 1: Service Account JSON (single line)
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}

# Method 2: Individual Firebase Config
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project-id.iam.gserviceaccount.com

# Optional: Firebase Emulator (for development)
FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
FIREBASE_DATABASE_EMULATOR_HOST=127.0.0.1:9000

# Realtime Database Configuration
LIVE_PUSH_INTERVAL_MS=3000

# API Security
API_KEY=dev_only_secret_key_change_in_production

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/csms.log

# OCPP Configuration
OCPP_CALL_TIMEOUT_MS=15000
MAX_STATIONS_PER_OWNER=50

# Pricing Configuration
PRICE_PER_KWH=2380
